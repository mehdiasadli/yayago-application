{
  "name": "yayago-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "lint": "biome check .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:admin": "turbo build --filter=admin",
    "build:partner": "turbo build --filter=partner",
    "build:server": "turbo build --filter=server",
    "build:packages": "turbo build --filter='./packages/*'",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:admin": "turbo -F admin dev",
    "dev:partner": "turbo -F partner dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @yayago-app/db db:push",
    "db:studio": "turbo -F @yayago-app/db db:studio",
    "db:generate": "turbo -F @yayago-app/db db:generate",
    "db:migrate": "turbo -F @yayago-app/db db:migrate",
    "db:migrate:deploy": "turbo -F @yayago-app/db db:migrate:deploy",
    "db:seed": "turbo -F @yayago-app/db db:seed"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "npm@10.9.3"
}
